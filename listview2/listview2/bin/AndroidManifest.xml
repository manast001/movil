<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.listview2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.listview2.MainActivity"
            android:label="Contactos" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.listview2.DetalleActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.listview2.MainActivity" >
        </activity>
        <activity
            android:name="com.example.listview2.AddContactActivity"
            android:parentActivityName="com.example.listview2.MainActivity"
            android:label="Agregar Nuevo Contacto" >
        </activity>
    </application>

</manifest>
